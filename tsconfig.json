{
    "compilerOptions": {
        "target": "ES2024",
        "lib": ["ES2024"],

        "paths": {
            "@/*": ["./src/*"]
        },

        "module": "nodenext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,                             
        "forceConsistentCasingInFileNames": true,          

        "strict": true,                                     
        "skipLibCheck": true
    }
}